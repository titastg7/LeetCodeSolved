441. Arranging Coins


C++ Code
----------------------------------

class Solution {
public:
    int arrangeCoins(int n) 
    {
        long long low=1, high=n,mid, sum;
        while(low<=high)
        {
            mid = low+(high-low)/2;
            sum = mid*(mid+1)/2;
            if(sum==n)
                return mid;
            else if(sum<n)
                low = mid+1;
            else
                high = mid-1;
        }
        return high;
    }
};
